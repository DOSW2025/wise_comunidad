generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model estados_usuario {
  id          Int        @id @default(autoincrement())
  nombre      String     @unique
  descripcion String?
  activo      Boolean    @default(true)
  created_at  DateTime   @default(now())
  updated_at  DateTime
  usuarios    usuarios[]
}

model materia {
  id            String          @id
  codigo        String          @unique
  nombre        String
  tema          tema[]
  tutor_materia tutor_materia[]
  tutoria       tutoria[]

  @@index([codigo])
}

model notifications {
  id            Int      @unique @default(autoincrement())
  userId        String
  fechaCreacion DateTime @default(now())
  asunto        String
  resumen       String
  visto         Boolean  @default(false)
  usuarios      usuarios @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([id, userId])
}

model rating {
  id            Int           @id @default(autoincrement())
  sessionId     String        @unique
  tutorId       String
  raterId       String
  score         Int
  comment       String?
  createdAt     DateTime      @default(now())
  usuarios      usuarios      @relation(fields: [raterId], references: [id])
  tutoria       tutoria       @relation(fields: [sessionId], references: [id_tutoria], onDelete: Cascade)
  tutor_profile tutor_profile @relation(fields: [tutorId], references: [id_tutor])
}

model roles {
  id          Int        @id @default(autoincrement())
  nombre      String     @unique
  descripcion String?
  activo      Boolean    @default(true)
  created_at  DateTime   @default(now())
  updated_at  DateTime
  usuarios    usuarios[]
}

model tema {
  id         String  @id
  materiaId  String
  nombreTema String
  materia    materia @relation(fields: [materiaId], references: [id], onDelete: Cascade)

  @@index([materiaId])
}

model tutor_materia {
  id            Int           @id @default(autoincrement())
  tutorId       String
  materiaId     String
  materia       materia       @relation(fields: [materiaId], references: [id], onDelete: Cascade)
  tutor_profile tutor_profile @relation(fields: [tutorId], references: [id_tutor], onDelete: Cascade)

  @@unique([tutorId, materiaId])
}

model tutor_profile {
  id_tutor      String          @id
  bio           String?
  reputacion    Float           @default(0)
  rating        rating[]
  tutor_materia tutor_materia[]
  usuarios      usuarios        @relation(fields: [id_tutor], references: [id], onDelete: Cascade)
}

model tutoria {
  id_tutoria                           String       @id
  tutorId                              String
  studentId                            String
  materiaId                            String
  codigoMateria                        String
  scheduledAt                          DateTime
  day                                  String
  startTime                            String
  endTime                              String
  mode                                 Modalidad
  status                               EstadoSesion @default(PENDIENTE)
  linkConexion                         String?
  lugar                                String?
  comentarios                          String?
  createdAt                            DateTime     @default(now())
  rating                               rating?
  materia                              materia      @relation(fields: [materiaId], references: [id])
  usuarios_tutoria_studentIdTousuarios usuarios     @relation("tutoria_studentIdTousuarios", fields: [studentId], references: [id])
  usuarios_tutoria_tutorIdTousuarios   usuarios     @relation("tutoria_tutorIdTousuarios", fields: [tutorId], references: [id])

  @@index([codigoMateria])
  @@index([materiaId])
  @@index([status])
  @@index([tutorId, scheduledAt])
}

model usuarios {
  id                                  String          @id
  email                               String          @unique
  nombre                              String
  apellido                            String
  telefono                            String?
  semestre                            Int             @default(1)
  ultimo_login                        DateTime?
  created_at                          DateTime        @default(now())
  updated_at                          DateTime
  avatar_url                          String?
  google_id                           String?         @unique
  estado_id                           Int             @default(1)
  rol_id                              Int             @default(1)
  biografia                           String?
  disponibilidad                      Json?
  notifications                       notifications[]
  rating                              rating[]
  tutor_profile                       tutor_profile?
  tutoria_tutoria_studentIdTousuarios tutoria[]       @relation("tutoria_studentIdTousuarios")
  tutoria_tutoria_tutorIdTousuarios   tutoria[]       @relation("tutoria_tutorIdTousuarios")
  estados_usuario                     estados_usuario @relation(fields: [estado_id], references: [id])
  roles                               roles           @relation(fields: [rol_id], references: [id])
  threads                             Thread[]
  responses                           responses[]

  @@index([email])
  @@index([estado_id])
  @@index([rol_id])
}

enum EstadoSesion {
  PENDIENTE
  CONFIRMADA
  CANCELADA
  COMPLETADA
  RECHAZADA
}

enum Modalidad {
  VIRTUAL
  PRESENCIAL
}

enum ThreadStatus {
  open
  closed
  archived
}

model Thread {
  id           String    @id @default(uuid())
  author_id    String
  title        String
  content      String
  status       ThreadStatus @default(open)
  replies_count Int      @default(0)
  views_count  Int       @default(0)
  pinned       Boolean   @default(false)
  created_at   DateTime  @default(now())
  updated_at   DateTime?
  deleted_at   DateTime?

  author usuarios @relation(fields: [author_id], references: [id], onDelete: Cascade)
  responses responses[]

  @@index([author_id])
  @@index([status])
}

model responses {
  id         String   @id @default(uuid())
  thread_id  String
  author_id  String
  content    String
  is_accepted Boolean @default(false)
  created_at DateTime @default(now())
  updated_at DateTime?
  deleted_at DateTime?

  thread Thread @relation(fields: [thread_id], references: [id], onDelete: Cascade)
  author usuarios @relation(fields: [author_id], references: [id], onDelete: Cascade)

  @@index([thread_id])
  @@index([author_id])
}
